## Supabase setup
# Get from terminal output when started supabase, or from cloud dashboard
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

## Telegram
# Get inside Telegram from Botfather when creating bot
TELEGRAM_BOT_TOKEN=
# Set your telegram user id allowed to interact with the bot. Get from telegram chat with bot.
TELEGRAM_ALLOWED_USER_ID=
# Create yourself, make it strong. e.g. with `openssl rand -hex 32`
TELEGRAM_WEBHOOK_SECRET=

## Slack (Chat SDK)
# Get from https://api.slack.com/apps → your app → Basic Information + OAuth
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=

## Microsoft Teams (Chat SDK)
# Get from Azure Bot / App Registration
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=
# Optional: SingleTenant or MultiTenant (defaults to MultiTenant)
TEAMS_APP_TYPE=MultiTenant
# Required when TEAMS_APP_TYPE=SingleTenant
TEAMS_APP_TENANT_ID=

## Discord (Chat SDK)
# Required for interactions webhook
DISCORD_BOT_TOKEN=
DISCORD_PUBLIC_KEY=
DISCORD_APPLICATION_ID=
# Optional: comma-separated role IDs that count as mentions
DISCORD_MENTION_ROLE_IDS=

## Worker / triggers
# Create these yourself, make it strong. e.g. with `openssl rand -hex 32`
# Needed for cron jobs to invoke the agent worker.
WORKER_SECRET=
# (optional) Needed for external triggers.
TRIGGER_WEBHOOK_SECRET=

## Storage
# (optional) The bucket name for the workspace which the agent has access to. Default is `workspace`.
WORKSPACE_BUCKET=workspace

## LLM provider (pick at least one)
# Get from https://platform.openai.com
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-5.2
# Get from https://claude.ai
# ANTHROPIC_API_KEY=
# ANTHROPIC_MODEL=claude-4-5-opus-latest
# Get from https://aistudio.google.com
# GEMINI_API_KEY=
# GEMINI_MODEL=gemini-3-flash
# Get from AWS IAM console
# AWS_BEDROCK_ACCESS_KEY=
# AWS_BEDROCK_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# Web Search Provider
# Get from https://api-dashboard.search.brave.com/
BRAVE_API_KEY=
# Get from https://dashboard.exa.ai/api-keys
EXA_API_KEY=

## For debugging
LOG_LEVEL=debug
